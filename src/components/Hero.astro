---
import ChairDisplay from './ChairDisplay';
---

<section class="relative h-[calc(100vh-80px)] bg-[#f8f4f4] overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full">
      <div class="space-y-6 animate-fade-in z-10">
        <span class="inline-block px-4 py-2 bg-black/5 rounded-full text-sm font-medium tracking-wider text-gray-600">
          NEW ARRIVAL
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
          Discover Timeless Comfort & Style
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed">
          Explore our exclusive collection of designer and antique furniture crafted to bring charm, elegance, and functionality to your space. 
          <!-- <span class="font-semibold text-black">Free Shipping</span> on all orders. -->
        </p>
        <div class="flex gap-4">
          <button onclick="window.location.href='/products'" class="bg-black text-white px-8 py-3 hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg">
            SHOP NOW
          </button>
        
        </div>
        <!-- <div class="flex items-center gap-6 pt-2">
          <div class="flex -space-x-2">
            {[1,2,3].map((i) => (
              <div class="w-8 h-8 rounded-full border-2 border-white bg-gray-200"></div>
            ))}
          </div>
          <p class="text-sm text-gray-600">
            <span class="font-semibold">2.5k+</span> happy customers
          </p>
        </div> -->
      </div>
      <div class="relative h-[300px] animate-float">
        <!-- <ChairDisplay client:visible /> -->
         <img src="/504011602_9618247824971541_5544755929502710825_n-removebg-preview.png" alt="Hero Image" class="w-full h-full object-contain">

      </div>
    </div>
  </div>
</section>

<style>
  /* .bg-grid-pattern {
    background-image: linear-gradient(to right, #000 1px, transparent 1px),
                      linear-gradient(to bottom, #000 1px, transparent 1px);
    background-size: 24px 24px;
  } */
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>