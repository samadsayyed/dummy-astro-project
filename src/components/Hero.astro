---
const slides = [
  {
    tag: "LIVING ROOM",
    title: "Comfort Meets Design",
    desc: "Make your living space inviting with our elegant sofas, coffee tables, and entertainment units.",
    btn: "SHOP LIVING ROOM",
    img: "/hero-images/living-room.jpg",
    alt: "Living Room Furniture",
    link: "/category/living-room"
  },
  {
    tag: "BEDROOM",
    title: "Rest in Luxury",
    desc: "Sleep peacefully with our premium beds, nightstands, and timeless bedroom essentials.",
    btn: "SHOP BEDROOM",
    img: "/hero-images/bedroom.jpg",
    alt: "Bedroom Furniture",
    link: "/category/Bedroom"
  },
  {
    tag: "ENTRYWAY STYLE",
    title: "Elegant First Impressions",
    desc: "Welcome your guests with stylish entryway furniture that blends beauty and functionality.",
    btn: "SHOP ENTRYWAY",
    img: "/hero-images/entryway.jpg",
    alt: "Entryway Furniture",
    link: "/category/entryway"
  },
  {
    tag: "HOME OFFICE",
    title: "Work in Style",
    desc: "Discover desks and chairs crafted to keep you productive and comfortable in your workspace.",
    btn: "SHOP OFFICE",
    img: "/hero-images/home-office.webp",
    alt: "Home Office Furniture",
    link: "/category/Home-Office"
  },
  {
    tag: "DINING ROOM",
    title: "Gather in Style",
    desc: "Create memories around the table with dining sets that combine elegance and durability.",
    btn: "SHOP DINING",
    img: "/hero-images/dining-room.jpg",
    alt: "Dining Room Furniture",
    link: "/category/Dining-Room"
  }
];
---

<section class="relative h-[calc(100vh-80px)]  overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full">
    <!-- Swiper Container -->
    <div class="swiper-container h-full">
      <div class="swiper-wrapper">
        {slides.map((slide) => (
          <div class="swiper-slide">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full w-full">
              <div class="space-y-6 animate-fade-in z-10" data-aos="fade-right">
                <span class="inline-block px-4 py-2 bg-black/5 rounded-full text-sm font-medium tracking-wider text-gray-600">
                  {slide.tag}
                </span>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
                  {slide.title}
                </h1>
                <p class="text-lg text-gray-600 leading-relaxed">
                  {slide.desc}
                </p>
                <div class="flex gap-4">
                  <button onclick={`window.location.href='${slide.link}'`} class="bg-black text-white px-8 py-3 hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg">
                    {slide.btn}
                  </button>
                </div>
              </div>
              <div class="relative h-[300px] animate-float" data-aos="fade-left">
                <img src={slide.img} alt={slide.alt} class="w-full h-full object-contain" />
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Swiper Pagination -->
      <!-- <div class="swiper-pagination"></div> -->
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.swiper-container', {
      modules: [Navigation, Pagination, Autoplay],
      slidesPerView: 1,
      spaceBetween: 100,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        type: 'bullets',
        dynamicBullets: true,
      },
      speed: 800,
      effect: 'slide',
    });
  });
</script>
