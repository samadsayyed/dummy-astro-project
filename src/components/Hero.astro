---
import ChairDisplay from './ChairDisplay';
---

<section class="relative h-[calc(100vh-80px)] bg-[#f8f4f4] overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full">
    <!-- Swiper Container -->
    <div class="swiper-container h-full">
      <div class="swiper-wrapper">
        
        <!-- Slide 1 -->
        <div class="swiper-slide">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full w-full">
            <div class="space-y-6 animate-fade-in z-10" data-aos="fade-right" data-aos-delay="200">
              <span class="inline-block px-4 py-2 bg-black/5 rounded-full text-sm font-medium tracking-wider text-gray-600" data-aos="fade-up" data-aos-delay="300">
                NEW ARRIVAL
              </span>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent" data-aos="fade-up" data-aos-delay="400">
                Discover Timeless Comfort & Style
              </h1>
              <p class="text-lg text-gray-600 leading-relaxed" data-aos="fade-up" data-aos-delay="500">
                Explore our exclusive collection of designer and antique furniture crafted to bring charm, elegance, and functionality to your space.
              </p>
              <div class="flex gap-4" data-aos="fade-up" data-aos-delay="600">
                <button onclick="window.location.href='/products'" class="bg-black text-white px-8 py-3 hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg">
                  SHOP NOW
                </button>
              </div>
            </div>
            <div class="relative h-[300px] animate-float" data-aos="fade-left" data-aos-delay="400">
              <img src="/504011602_9618247824971541_5544755929502710825_n-removebg-preview.png" alt="Hero Image" class="w-full h-full object-contain">
            </div>
          </div>
        </div>

        <!-- Slide 2 -->
        <div class="swiper-slide">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full w-full">
            <div class="space-y-6 animate-fade-in z-10" data-aos="fade-right" data-aos-delay="200">
              <span class="inline-block px-4 py-2 bg-black/5 rounded-full text-sm font-medium tracking-wider text-gray-600" data-aos="fade-up" data-aos-delay="300">
                PREMIUM COLLECTION
              </span>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent" data-aos="fade-up" data-aos-delay="400">
                Luxury Seating Solutions
              </h1>
              <p class="text-lg text-gray-600 leading-relaxed" data-aos="fade-up" data-aos-delay="500">
                Experience unmatched comfort with our handcrafted premium chairs designed for modern living spaces.
              </p>
              <div class="flex gap-4" data-aos="fade-up" data-aos-delay="600">
                <button onclick="window.location.href='/products'" class="bg-black text-white px-8 py-3 hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg">
                  EXPLORE LUXURY
                </button>
              </div>
            </div>
            <div class="relative h-[300px] animate-float" data-aos="fade-left" data-aos-delay="400">
              <img src="/504011602_9618247824971541_5544755929502710825_n-removebg-preview.png" alt="Premium Chair" class="w-full h-full object-contain">
            </div>
          </div>
        </div>

        <!-- Slide 3 -->
        <div class="swiper-slide">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full w-full">
            <div class="space-y-6 animate-fade-in z-10" data-aos="fade-right" data-aos-delay="200">
              <span class="inline-block px-4 py-2 bg-black/5 rounded-full text-sm font-medium tracking-wider text-gray-600" data-aos="fade-up" data-aos-delay="300">
                VINTAGE COLLECTION
              </span>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent" data-aos="fade-up" data-aos-delay="400">
                Antique Elegance
              </h1>
              <p class="text-lg text-gray-600 leading-relaxed" data-aos="fade-up" data-aos-delay="500">
                Step into history with our carefully curated vintage furniture pieces that tell a story of craftsmanship.
              </p>
              <div class="flex gap-4" data-aos="fade-up" data-aos-delay="600">
                <button onclick="window.location.href='/products'" class="bg-black text-white px-8 py-3 hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg">
                  VIEW ANTIQUES
                </button>
              </div>
            </div>
            <div class="relative h-[300px] animate-float" data-aos="fade-left" data-aos-delay="400">
              <img src="/504011602_9618247824971541_5544755929502710825_n-removebg-preview.png" alt="Vintage Chair" class="w-full h-full object-contain">
            </div>
          </div>
        </div>

        <!-- Slide 4 -->
        <div class="swiper-slide">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center h-full w-full">
            <div class="space-y-6 animate-fade-in z-10" data-aos="fade-right" data-aos-delay="200">
              <span class="inline-block px-4 py-2 bg-black/5 rounded-full text-sm font-medium tracking-wider text-gray-600" data-aos="fade-up" data-aos-delay="300">
                MODERN DESIGN
              </span>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent" data-aos="fade-up" data-aos-delay="400">
                Contemporary Living
              </h1>
              <p class="text-lg text-gray-600 leading-relaxed" data-aos="fade-up" data-aos-delay="500">
                Embrace minimalist aesthetics with our sleek, contemporary furniture designed for today's homes.
              </p>
              <div class="flex gap-4" data-aos="fade-up" data-aos-delay="600">
                <button onclick="window.location.href='/products'" class="bg-black text-white px-8 py-3 hover:bg-gray-800 transition-all duration-300 transform hover:scale-105 shadow-lg">
                  SHOP MODERN
                </button>
              </div>
            </div>
            <div class="relative h-[300px] animate-float" data-aos="fade-left" data-aos-delay="400">
              <img src="/504011602_9618247824971541_5544755929502710825_n-removebg-preview.png" alt="Modern Chair" class="w-full h-full object-contain">
            </div>
          </div>
        </div>

      </div>
      
      <!-- Pagination positioned at bottom-left -->
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
  
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  document.addEventListener('DOMContentLoaded', function() {
    const swiper = new Swiper('.swiper-container', {
      modules: [Navigation, Pagination, Autoplay],
      slidesPerView: 1,
      spaceBetween: 100,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        type: 'bullets',
        dynamicBullets: true,
      },
      speed: 800,
      effect: 'slide',
    });
  });
</script>