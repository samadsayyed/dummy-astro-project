---
import { getAllBlogs } from '../utils/blogUtils';
import BlogCard from './BlogCard.astro';

// Get blog posts from the utility function
const blogPosts = await getAllBlogs();
// Limit to 6 posts for the homepage section
const featuredPosts = blogPosts.slice(0, 6);
---

<section class="py-24 px-4 bg-white text-black">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-20">
      <div class="inline-block mb-6">
        <span class="text-xs font-mono tracking-widest text-gray-600 uppercase">Insights & Inspiration</span>
      </div>
      <h2 class="text-5xl md:text-7xl font-light text-black mb-6 tracking-tight">
        BLOG
        <span class="block text-2xl md:text-3xl font-light text-gray-600 mt-2 tracking-widest">PERSPECTIVES</span>
      </h2>
      <div class="w-24 h-px bg-gradient-to-r from-transparent via-black to-transparent mx-auto"></div>
    </div>
    
    <!-- Blog Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredPosts.map((post) => (
        <BlogCard post={post} showAuthor={true} />
      ))}
    </div>
    
    <!-- View All Button -->
    <div class="text-center mt-16">
      <a
        href="/blogs"
        class="group inline-flex items-center px-12 py-4 bg-black text-white font-mono tracking-wider text-sm uppercase hover:bg-gray-800 transition-all duration-300 border border-black hover:border-gray-800"
      >
        View All Articles
        <svg class="w-4 h-4 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Custom scrollbar for webkit browsers */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f9fafb;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #d1d5db;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Custom focus styles */
  .group:focus-within {
    outline: 1px solid #000000;
    outline-offset: 2px;
  }
  
  /* Text selection */
  ::selection {
    background: rgba(0, 0, 0, 0.1);
    color: black;
  }
</style>