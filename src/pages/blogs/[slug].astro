---
// Import necessary components and utilities
import Layout from '../../layouts/Layout.astro';
import { getAllBlogs, getBlogBySlug, getRelatedBlogs } from '../../utils/blogUtils';

// Define blog type interface
interface Blog {
  id: number;
  title: string;
  date: string;
  author: string;
  authorImage: string;
  category: string;
  image: string;
  description: string;
  content: string;
  slug: string;
  created_at: string;
  updated_at: string;
} 

// Generate static paths for all available blog posts
export async function getStaticPaths() {
  try {
    const blogs = await getAllBlogs();
    
    // Filter out blogs with empty or missing slugs
    const validBlogs = blogs.filter((blog: Blog) => blog.slug && blog.slug.trim() !== '');
    
    return validBlogs.map((blog: Blog) => ({
      params: { slug: blog.slug },
      props: { slug: blog.slug }
    }));
  } catch (error) {
    console.error('Error generating static paths for blogs:', error);
    return [];
  }
}

// Get the slug from props and fetch blog data
const { slug } = Astro.props;
const blog: Blog | null = await getBlogBySlug(slug);

// Get related posts
const relatedPosts = blog ? await getRelatedBlogs(blog.id) : [];
---

<Layout title={blog ? `${blog.title} - Bablon Blog` : 'Blog Post Not Found'}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <!-- {JSON.stringify(blog)} -->
    {blog ? (
      <article class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Hero Image -->
        <div class="relative">
          <img 
            src={blog.image} 
            alt={blog.title} 
            class="w-full h-[400px] object-cover"
          />
          <div class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/70 to-transparent p-6">
            <div class="text-white">
              <div class="mb-2 text-sm font-medium">{blog.category}</div>
              <h1 class="text-3xl md:text-4xl font-bold mb-2">{blog.title}</h1>
              <div class="flex items-center mt-4">
                <img 
                  src={blog.authorImage} 
                  alt={blog.author} 
                  class="w-10 h-10 rounded-full border-2 border-white mr-3"
                />
                <div>
                  <div class="text-sm font-medium">{blog.author}</div>
                  <div class="text-xs opacity-80">{blog.date}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Content -->
        <div class="p-6 md:p-8">
          <div class="prose prose-lg max-w-none" set:html={blog.content}></div>
          
          <!-- Tags -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <div class="flex flex-wrap gap-2">
              {blog.category.split(', ').map((tag: string) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-800 text-sm rounded-full">{tag}</span>
              ))}
            </div>
          </div>
          
          <!-- Author Bio -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <div class="flex items-center">
              <img 
                src={blog.authorImage} 
                alt={blog.author} 
                class="w-16 h-16 rounded-full mr-4"
              />
              <div>
                <h3 class="font-bold text-lg">{blog.author}</h3>
                <p class="text-gray-600">Content Writer & Interior Design Specialist</p>
              </div>
            </div>
          </div>
          
          <!-- Related Posts -->
          {relatedPosts.length > 0 && (
            <div class="mt-12 pt-6 border-t border-gray-200">
              <h2 class="text-2xl font-bold mb-6">Related Articles</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {relatedPosts.map((related: Blog) => (
                  <a href={`/blogs/${related.slug}`} class="group">
                    <div class="bg-gray-50 rounded-lg overflow-hidden">
                      <img 
                        src={related.image} 
                        alt={related.title} 
                        class="w-full h-48 object-cover group-hover:opacity-90 transition-opacity"
                      />
                      <div class="p-4">
                        <div class="text-xs text-gray-500 mb-1">{related.date}</div>
                        <h3 class="font-semibold group-hover:text-gray-600 transition-colors">{related.title}</h3>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      </article>
    ) : (
      <div class="text-center py-16">
        <h1 class="text-3xl font-bold mb-4">Blog Post Not Found</h1>
        <p class="text-gray-600 mb-8">The blog post you're looking for doesn't exist or has been removed.</p>
        <a href="/blogs" class="inline-block bg-gray-800 text-white px-6 py-3 rounded-md hover:bg-gray-700 transition-colors">Back to Blogs</a>
      </div>
    )}
  </main>
</Layout>

<style>
  /* Add custom styles for the blog post here */
  .prose h2 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    font-weight: 600;
  }
  
  .prose p {
    margin-bottom: 1em;
    line-height: 1.7;
  }
  
  .prose ul {
    margin-bottom: 1em;
    padding-left: 1.5em;
    list-style-type: disc;
  }
  
  .prose li {
    margin-bottom: 0.5em;
  }
</style>