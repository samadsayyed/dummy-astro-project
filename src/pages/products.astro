---
import Layout from '../layouts/Layout.astro';

const products = [
  {
    id: 1,
    name: 'Modern Sofa',
    price: 1299,
    category: 'Living Room',
    image: '/placeholder.jpg'
  },
  {
    id: 2,
    name: 'Dining Table Set',
    price: 899,
    category: 'Dining',
    image: '/placeholder.jpg'
  },
  {
    id: 3,
    name: 'Queen Size Bed',
    price: 1499,
    category: 'Bedroom',
    image: '/placeholder.jpg'
  }
  // Add more products as needed
];
---

<Layout title="Products - FurnishCraft">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Our Collection</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {products.map(product => (
        <a href={`/products/${product.id}`} class="group">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden transform group-hover:scale-105 transition-transform">
            <div class="h-64 bg-yellow-100"></div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{product.name}</h3>
              <p class="text-gray-600">${product.price}</p>
              <p class="text-sm text-gray-500">{product.category}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>