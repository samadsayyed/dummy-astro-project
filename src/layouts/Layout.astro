---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import "../styles/index.css";

const { title = 'FurnishCraft - Elegant Furniture' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Antonio:wght@300;400;500;600;700&family=Nunito:wght@300;400;500;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer/>
  </body>
</html>

<style is:global>
  :root {
    --accent: #FCD34D;
    --accent-dark: #F59E0B;
  }
  
  html {
    font-family: 'Nunito', sans-serif;
    scroll-behavior: smooth;
  }

  h1, h2, h3, h4, h5 {
    font-family: 'Antonio', sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
    /* background: #FFFBF2; */
    color: #1F2937;
  }

  /* Custom Scrollbar Styles */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: #000000;
    border-radius: 8px;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--accent);
    border-radius: 8px;
    border: 3px solid #000000;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--accent-dark);
  }
</style>